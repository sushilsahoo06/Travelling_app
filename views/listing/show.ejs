<% layout("/layouts/boilerplate") %>
  <body>
    
    <div class="row">
      <div class="col-8 mt-3">
        <div class="card offset-3">
          <h3><%= listing.title %></h3>
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listingimage">
          <ul>
            <li><%= listing.description%></li>
            <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
            <li><%= listing.location %></li>
            <li><%= listing.country %></li>
          </ul>
        </div>
      </div>
    </div>

    <br>
    
    <div class="action gap-4">
      <div class="edit">
      <a href="/listing/<%=listing._id %>/Edit" class="btn btn-danger offset-3 ">Edit</a>
      </div>
  
      <div class="delete">
        <form method="post" action="/listing/<%=listing._id %>?_method=DELETE">
          <button class="btn btn-outline-dark offset-4">Delete</button>
        </form>
      </div>
    </div>
    <hr>
    <div class="col-8 offset-3">
      <h4>Leave a Review</h4>
      <form method="post" action="/listing/<%= listing._id %>/reviews" class="needs-validation" novalidate>
        <div class="mt-3 mb-3">
          <label for="rating">Rating</label>
          <input id="rating" type="range" min="1" max="5" name="Rating" class="form-range" required>
        </div>
        <div class="mt-3 mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea id="comment" name="Comment" cols="30" rows="5" class="form-control" required></textarea>
        </div>
        <button class="btn btn-outline-dark mt-3 mb-5" type="submit">submit</button>
      </form>
    </div>

    <hr>
    <h4>All Reviews</h4>
    <p><%= listing.reviews%></p>
  </body>

  <script src="/js/app.js"></script>

