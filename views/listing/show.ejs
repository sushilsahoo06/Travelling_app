<% layout("/layouts/boilerplate") %>
  <body>
    
    <div class="row">
      <div class="col-8 mt-3">
        <div class="card offset-3">
          <h3><%= listing.title %></h3>
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listingimage">
          <ul>
            <li><%= listing.description%></li>
            <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
            <li><%= listing.location %></li>
            <li><%= listing.country %></li>
          </ul>
        </div>
      </div>
    </div>

    <br>
    <hr>
    <div class="action gap-4">
      <div class="edit">
      <a href="/listing/<%=listing._id %>/Edit" class="btn btn-danger offset-3 ">Edit</a>
      </div>
  
      <div class="delete">
        <form method="post" action="/listing/<%=listing._id %>?_method=DELETE">
          <button class="btn btn-outline-dark offset-4">Delete</button>
        </form>
      </div>
    </div>




